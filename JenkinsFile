#!/usr/bin/env groovy
pipeline {
  agent any

  environment {
    TAG = "demo_${env.BRANCH_NAME}_${env.BUILD_NUMBER}"
  }

  stages {
    stage("Checkout") {
      steps {
        checkout scm
      }
    }

    stage("Execute DockerFile") {
      steps {

       bat "docker build -t uiprojdockerimage$BUILD_NUMBER ."

      }
    }

    stage('Run Selenium Tests') {
      steps {

           bat "docker-compose -f docker-compose.yml up -d"



            bat "docker run -d uiprojdockerimage$BUILD_NUMBER mvn clean test -DsuiteXMLFile=SmokeSuite.xml"

}
}
 stage('Delete Docker Images') {
      steps {

           bat "docker-compose -f docker-compose.yml down --rmi all"
}
       }

    }
  }

