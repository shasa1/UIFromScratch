#!/usr/bin/env groovy
pipeline {
  agent any

  environment {
    TAG = "demo_${env.BRANCH_NAME}_${env.BUILD_NUMBER}"
  }

  stages {
    stage("Checkout") {
      steps {
        checkout scm
      }
    }

    stage("Execute DockerFile") {
      steps {
      sh "docker build -t uiprojdockerimage ."
      }
    }

    stage('Run Selenium Tests') {
      steps {

           sh "docker-compose -f docker-compose.yml up -d"



            sh "docker run -d --network="host" uiprojdockerimage mvn clean test -DsuiteXMLFile=/temp/salmon/UIFromScratch/SmokeSuite.xml"




           sh "docker-compose -f docker-compose.yml down --rmi all"

        }
      }
    }
  }

