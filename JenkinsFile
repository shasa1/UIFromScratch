#!/usr/bin/env groovy
pipeline {
  agent {label "linux"}

  environment {
    TAG = "demo_${env.BRANCH_NAME}_${env.BUILD_NUMBER}"
  }

  stages {
    stage("Checkout") {
      steps {
        checkout scm
      }
    }

    stage("Execute DockerFile") {
      steps {

       bat "docker build -t uiprojdockerimage ."

      }
    }

